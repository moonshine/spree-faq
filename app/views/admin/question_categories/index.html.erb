<div class='toolbar'>
    <ul class='actions'>
      <li id="new_ot_link">
        <%= button_link_to_remote t("new_question_category"), 
                         {:url => new_object_url, 
                         :method => :get,
                         :update => "new-category"}, :icon => 'add' %>
      </li> 
    </ul>
  <br class='clear' />
</div>
<%= image_tag "spinner.gif", :plugin=>"spree", :style => "display:none", :id => 'busy_indicator' %>
<div id="new-category"></div>

<h1>Question Categories</h1>
<table class="index">
  <thead>
    <th><%= t("category") %></th>
    <th><%= t("questions") %></th>
    <th><%= t("roles") %></th>
    <th>&nbsp;</th>
  </tr>
  <thead>
<% @question_categories.each do |category| %>
  <tr id="<%= dom_id category %>"> 
    <td><%= h category.name %></td>
    <td><%= category.questions.count %></td>
    <td><%= category.roles.sort_by { |r| r.id }.collect { |r| r.name }.join(', ') %></td>
    <td class="actions">
      <%= link_to_edit category %>&nbsp;
      <%= link_to_delete category %>
    </td>
  </tr>
<% end %> 
  </tbody>
</table>
